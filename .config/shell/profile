# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DESKTOP_DIR="$HOME/Desktop"
export XDG_DOCUMENTS_DIR="$HOME/Documents"
export XDG_DOWNLOAD_DIR="$HOME/Downloads"

# personal logs
export LOGS_DIR="$XDG_DOCUMENTS_DIR/logs"
export JOURNAL_DIR="$LOGS_DIR/journal"
export CURRENT_JOURNAL_DIR="$JOURNAL_DIR/$(date +'%Y')/$(date +'%m_%B' | tr '[:upper:]' '[:lower:]')"
export MEETINGS_DIR="$LOGS_DIR/meetings"


export HISTFILE="$XDG_STATE_HOME/shell_history"
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"

export EDITOR="vim"
command -v nvim > /dev/null && export EDITOR="nvim"

# Created by `pipx` on 2024-11-08 21:14:37
export PATH="$HOME/.npm-packages/bin:$PATH"


# DRIBIA
export REPOSITORIES_PATH=/home/tomas/repositories
export DRIBIA_DRIVE_PATH=/home/tomas/drive
export DRIBIA_DRIVETEAM_PATH=/home/tomas/drive_team
export PROGRAMS_PATH=/home/tomas/programs
export WORKON_HOME=/home/tomas/.virtualenvs
export PROJECT_HOME=/home/tomas/repositories
export PYTHONPATH=:/home/tomas/repositories/dribia/pydribia/pydribia:/home/tomas/repositories/dribia/sotweaks/sotweaks
export PYTHONDONTWRITEBYTECODE=no

. "$HOME/.local/share/../bin/env"
export PATH="$PATH:/opt/mssql-tools18/bin"

