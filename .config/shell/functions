pwdc() {
    if [ $# -eq 0 ]; then
        builtin pwd | xclip -selection clipboard
    else
        realpath "$@" | xclip -selection clipboard
    fi
}
vpn() {
    if [[ "$1" == "up" ]]; then
        sudo wg-quick up wg0
    elif [[ "$1" == "down" ]]; then
        sudo wg-quick down wg0
    else
        echo "Usage: vpn {up|down}"
        return 1
    fi
}


